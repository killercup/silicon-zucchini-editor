{
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "ecmaFeatures": {
    "objectLiteralShorthandMethods": true,
    "objectLiteralShorthandProperties": true,
    "arrowFunctions": true,
    "blockBindings": true,
    "classes": true,
    "destructuring": true,
    "jsx": true
  },
  "plugins": [
    "mocha",
    "nodeca",
    "react",
    "one-variable-per-var"
  ],
  "globals": {
    "Promise": true
  },
  "rules": {
    "eqeqeq": 1,
    "curly": 2,
    "quotes": 0,
    "strict": 0,
    "camelcase": 0,
    "radix": 1,
    "no-sync": 1,
    "guard-for-in": 2,
    "no-eq-null": 1,

    "complexity": [1, 10],
    "no-unused-vars": [2, {"vars": "all", "args": "none"}],
    "block-scoped-var": 2,
    "max-nested-callbacks": [1, 4],

    "valid-jsdoc": 1,
    "no-warning-comments": [1, { "terms": ["todo", "fixme"], "location": "start" }],
    "spaced-line-comment": [1, "always"],
    "max-len": [1, 80, 4],

    "new-parens": 1,
    "new-cap": 0,
    "no-trailing-spaces": 1,
    "no-mixed-spaces-and-tabs": 2,
    "nodeca/indent": [ 2, "spaces", 2 ],
    "nodeca/no-lodash-aliases": 1,
    "space-before-blocks": [1, "always"],
    "space-after-keywords": [1, "always"],
    "space-before-function-parentheses": [2, {"anonymous": "always", "named": "never"}],
    "space-in-parens": [1, "never"],
    "padded-blocks": [1, "never"],
    "comma-style": [1, "last"],
    "wrap-iife": [2, "outside"],
    "no-lonely-if": 1,
    "no-nested-ternary": 1,
    "no-multiple-empty-lines": 1,
    "wrap-regex": 1,
    "default-case": 2,
    "no-else-return": 1,
    "no-floating-decimal": 1,
    "no-multi-str": 0,

    "mocha/no-exclusive-tests": 2,

    "react/no-multi-comp": 1,
    "react/prop-types": 0,
    "react/display-name": 2,
    "react/wrap-multilines": 2,
    "react/self-closing-comp": 2,
    "react/no-did-mount-set-state": 2,
    "react/no-did-update-set-state": 2,
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,

    "one-variable-per-var/one-variable-per-var": 1
  }
}
